{
  "name": "@cloudillo/quillo-app",
  "version": "0.0.1",
  "description": "Quillo text editor app",
  "type": "module",
  "main": "src/index.js",
  "jest": {
    "preset": "ts-jest"
  },
  "scripts": {
    "l-scan": "i18next-scanner --config src/i18n/scanner.config.cjs",
    "build-ts": "cross-env NODE_ENV=production rollup -c",
    "build-html": "sed s/@VERSION@/$npm_package_version/ src/index.html >dist/index.html",
    "build": "pnpm run build-ts && pnpm run build-html",
    "watch": "rollup -w -c",
    "clean": "rimraf .cache dist/assets-*"
  },
  "author": "Szil√°rd Hajba <szilu@cloudillo.org",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@cloudillo/base": "workspace:^",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@symbion/opalui": "^0.11.8",
    "@symbion/runtype": "^1.1.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "i18next": "^24.2.2",
    "i18next-scanner": "^4.6.0",
    "i18next-scanner-typescript": "^1.2.1",
    "postcss": "^8.5.3",
    "quill": "^2.0.3",
    "quill-cursors": "^4.0.4",
