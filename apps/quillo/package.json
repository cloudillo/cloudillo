    "rollup": "^4.34.8",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-gzip": "^4.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-progress": "^1.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "y-indexeddb": "^9.0.12",
    "y-quill": "^1.0.0",
    "y-websocket": "^2.1.0",
    "yjs": "^13.6.23"
  }
